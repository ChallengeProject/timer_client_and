<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/tabViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:tabGravity="fill"
                app:tabIndicatorGravity="top"
                app:tabIndicatorHeight="3dp">

            <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_my_time_set"
                    style="@style/HomeTabTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_my_time_set"
                    android:text="@string/menu_my_time_set" />

            <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_home"
                    style="@style/HomeTabTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_bottom_home"
                    android:text="@string/menu_home" />

            <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_shared_time_set"
                    style="@style/HomeTabTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_shared_time_set"
                    android:text="@string/menu_shared_time_set" />
        </com.google.android.material.tabs.TabLayout>
    </androidx.viewpager.widget.ViewPager>
</androidx.constraintlayout.widget.ConstraintLayout>