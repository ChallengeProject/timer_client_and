<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="160dp"
    android:background="@drawable/bg_radius_5_black_border_gray">

    <TextView
        android:fontFamily="@font/nanum_square_r"    android:id="@+id/dialogSelectorTvContent"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="6sp"
        android:lines="4"
        android:textColor="@color/ux_black"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="얼럿 메시지 내용 총 60자 노출 가능 120 바이트 까지 노출 가능 최대 4줄까지 노출 가능 4줄 초과 불가함" />

    <TextView
        android:fontFamily="@font/nanum_square_r"    android:id="@+id/dialogSelectorTvBtn1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/ux_black"
        android:gravity="center"
        android:textColor="@color/ux_gray"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="AAAAAA" />


    <TextView
        android:fontFamily="@font/nanum_square_r"   android:id="@+id/dialogSelectorTvBtn2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/ux_black"
        android:gravity="center"
        android:textColor="@color/ux_gray"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="BBB" />

</androidx.constraintlayout.widget.ConstraintLayout>