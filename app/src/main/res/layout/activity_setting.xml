<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingActivity">

    <include
        android:id="@+id/actSettingIncToolbar"
        layout="@layout/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/actSettingViewTopLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ux_dark_gray"
        app:layout_constraintTop_toBottomOf="@id/actSettingIncToolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actSettingViewTopLine">

        <LinearLayout
            android:id="@+id/actSetting1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/_ic_next" />

            <TextView android:fontFamily="@font/nanum_square_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="공지사항"
                android:textColor="@color/ux_black"
                android:textSize="12dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/text_hint_gray"
            app:layout_constraintTop_toBottomOf="@id/actSettingIncToolbar" />


        <LinearLayout
            android:id="@+id/actSetting2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/_ic_next" />

            <TextView android:fontFamily="@font/nanum_square_r"
                android:id="@+id/actSettingTvSoundType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ux_dark_gray"
                android:textSize="12dp"
                tools:text="현재 : 기본음" />

            <TextView android:fontFamily="@font/nanum_square_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="기본 사운드 설정"
                android:textColor="@color/ux_black"
                android:textSize="12dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/text_hint_gray"
            app:layout_constraintTop_toBottomOf="@id/actSettingIncToolbar" />


        <LinearLayout
            android:id="@+id/actSetting3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/_ic_next" />

            <TextView android:fontFamily="@font/nanum_square_r"
                android:id="@+id/actSettingTvCountDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ux_dark_gray"
                android:textSize="12dp"
                tools:text="현재 : 5초" />

            <TextView android:fontFamily="@font/nanum_square_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="카운트다운"
                android:textColor="@color/ux_black"
                android:textSize="12dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/text_hint_gray"
            app:layout_constraintTop_toBottomOf="@id/actSettingIncToolbar" />


        <LinearLayout
            android:id="@+id/actSetting4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/_ic_next" />

            <TextView android:fontFamily="@font/nanum_square_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="제작팀 정보"
                android:textColor="@color/ux_black"
                android:textSize="12dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/text_hint_gray"
            app:layout_constraintTop_toBottomOf="@id/actSettingIncToolbar" />


        <LinearLayout
            android:id="@+id/actSetting5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/_ic_next" />

            <TextView android:fontFamily="@font/nanum_square_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="오픈소스 라이센스"
                android:textColor="@color/ux_black"
                android:textSize="12dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/text_hint_gray"
            app:layout_constraintTop_toBottomOf="@id/actSettingIncToolbar" />

    </LinearLayout>

    <TextView android:fontFamily="@font/nanum_square_r"
        android:id="@+id/actSettingTopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="최신 버전입니다"
        android:textColor="@color/ux_black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/actSettingIncToolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/actSettingIncToolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>