<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_20_white"
    android:paddingBottom="9dp">


    <TextView
        android:id="@+id/itemPresetTvWholeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanum_square_eb"
        android:textColor="@color/ux_black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="HH:MM:SS" />

    <TextView
        android:id="@+id/itemPresetTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nanum_square_b"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/itemPresetTvWholeTime"
        app:layout_constraintTop_toBottomOf="@id/itemPresetTvWholeTime"
        tools:text="타임셋명" />


    <TextView
        android:id="@+id/itemPresetTvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/ux_dark_gray"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@id/itemPresetTvWholeTime"
        app:layout_constraintTop_toBottomOf="@id/itemPresetTvTitle"
        tools:text="종료 예정 HH:MM PM" />

    <ImageView
        android:id="@+id/itemPresetIvClockIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="5dp"
        android:padding="12dp"
        android:src="@drawable/_ic_clock"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemPresetTvEndTime" />

    <TextView
        android:id="@+id/itemPresetTvTimeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/ux_dark_gray"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/itemPresetIvClockIcon"
        app:layout_constraintLeft_toRightOf="@id/itemPresetIvClockIcon"
        app:layout_constraintTop_toTopOf="@id/itemPresetIvClockIcon"
        tools:text="N" />

</androidx.constraintlayout.widget.ConstraintLayout>