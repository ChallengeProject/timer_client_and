<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/actTeamInfoIncToolbar"
        layout="@layout/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/actTeamInfoViewTopLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ux_dark_gray"
        app:layout_constraintTop_toBottomOf="@id/actTeamInfoIncToolbar" />

    <TextView
        android:text="안녕하세요.\n2min 을 사용해주셔서 감사드립니다.\n\n앞으로 더욱 발전된 앱으로 찾아뵙겠습니다."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/ux_black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/actTeamInfoIncToolbar" />

    <TextView
        android:id="@+id/actTeamInfoTvCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="53dp"
        android:text="복사"
        android:textColor="@color/ux_black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="53dp"
        android:text="ask2min@gmail.com"
        android:textColor="@color/ux_black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>