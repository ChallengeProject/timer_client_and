<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_20_white"
    android:paddingBottom="11dp">


    <TextView
        android:id="@+id/itemSaveTimeSetTvWholeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanum_square_eb"
        android:textColor="@color/ux_black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="HH:MM:SS" />

    <TextView
        android:id="@+id/itemSaveTimeSetTvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/ux_dark_gray"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/itemSaveTimeSetTvWholeTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemSaveTimeSetTvWholeTime"
        tools:text="종료 예정 HH:MM PM" />


    <TextView
        android:id="@+id/itemSaveTimeSetTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/itemSaveTimeSetIvClockIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemSaveTimeSetIvClockIcon"
        tools:text="타임셋명" />

    <ImageView
        android:id="@+id/itemSaveTimeSetIvClockIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:padding="12dp"
        android:src="@drawable/_ic_clock"
        app:layout_constraintRight_toLeftOf="@id/itemSaveTimeSetTvTimeCount"
        app:layout_constraintTop_toBottomOf="@id/itemSaveTimeSetTvWholeTime" />

    <TextView
        android:id="@+id/itemSaveTimeSetTvTimeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/nanum_square_r"
        android:textColor="@color/ux_dark_gray"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/itemSaveTimeSetIvClockIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemSaveTimeSetIvClockIcon"
        tools:text="N" />

</androidx.constraintlayout.widget.ConstraintLayout>