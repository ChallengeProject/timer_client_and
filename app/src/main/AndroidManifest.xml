<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.timer">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
            android:name=".se_util.App"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".main.MainActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".proc.ProcActivity"
                android:theme="@style/Theme.Design.Light.NoActionBar"
                android:launchMode="singleTask" />

        <service
                android:name=".proc.ProcService"
                android:enabled="true"
                android:exported="true" >

            <intent-filter>
                <action android:name="RESTART"/>
                <action android:name="PAUSE"/>
                <action android:name="SOUND_OFF"/>
                <action android:name="STOP"/>
                <action android:name="REMAIN_SEC"/>
                <action android:name="ROUND"/>
                <action android:name="REPEAT"/>

            </intent-filter>
        </service>

    </application>

</manifest>